{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "build",                    
    "strict": true,                                 
    "noUnusedLocals": false,
    "noUnusedParameters": false,                  
    "esModuleInterop": true,                        
    "experimentalDecorators": true,              
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true,
  },
  "lib": ["es6"],
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
}